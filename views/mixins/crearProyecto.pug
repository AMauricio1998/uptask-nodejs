mixin crearProyecto(proyecto = {})

    form(class="agregar-proyecto" action=`/nuevo-proyecto/${proyecto.id || ''}` method="POST") 
        div.campo
            label(for="nombre") Nombre proyecto:
            input(type="text" id="nombre" name="nombre" placeholder="Nombre del proyecto" value=proyecto.nombre)
        div.campo.enviar 
            input(type="submit" value=`${proyecto.nombre ? 'Guardar' : 'Agregar'}` class="boton")